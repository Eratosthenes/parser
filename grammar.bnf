// bnf grammar for language
// NOTE: uppercase words match to tokens
statement: expr assignment term; 

// assignment
assignment: ASSIGNMENT;

// expression
expr: expr op term
    | term op term
    ;

// operands
term: NAME 
    | FLOAT 
    | INT 
    | STRING
    | OP expr CP
    ;

// operations
op:   ADD 
    | SUBTRACT
    | MULTIPLY
    | DIVIDE
    ;