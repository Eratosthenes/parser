{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Run tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["test"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Test Grammar",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["-tokens=bnf.tok", "-input=grammar.bnf"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: Test Parser",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "args": ["-tokens=language.tok", "-lang=grammar.bnf"],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}